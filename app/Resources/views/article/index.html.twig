{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>

    {{ form_start(formRecherche) }}
    {{ form_widget(formRecherche) }}
    {{ form_end(formRecherche) }}
    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Titre</th>
                <th>Datemodif</th>
                <th>Datepublication</th>
				<th>Nombre de commentaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            {% if article.ecritPar.id != app.user.id %}
                <tr>
                    {#<td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>#}
                    <td>{{ article.titre }}</td>
                    <td>{% if article.dateModif %}{{ article.dateModif|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if article.datePublication %}{{ article.datePublication|date('Y-m-d') }}{% endif %}</td>
                    <td>{{article.comArticle|length}}</td>
					<td>
                        <a href="{{ path('article_show', { 'id': article.id }) }}">Voir</a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
