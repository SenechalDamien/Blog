{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>
    {% if is_granted('ROLE_AUTEUR') %}
        <p>
            <a href="{{ path('article_mesArticles') }}">Liste de mes Articles</a>
        </p>
    {% endif %}
    <table>
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Titre</th>
                <th>Datemodif</th>
                <th>Datepublication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            {% if article.ecritPar.id != user.id %}
                <tr>
                    {#<td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>#}
                    <td>{{ article.titre }}</td>
                    <td>{% if article.dateModif %}{{ article.dateModif|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if article.datePublication %}{{ article.datePublication|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('article_show', { 'id': article.id }) }}">Voir</a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_AUTEUR') %}
        <ul>
            <li>
                <a href="{{ path('article_new') }}">Cr√©er un nouvel article</a>
            </li>
        </ul>
    {% endif %}
{% endblock %}
