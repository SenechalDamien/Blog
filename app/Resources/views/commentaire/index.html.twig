{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaires list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Article</th>
                <th>Contenu</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <td>{{ commentaire.articleAssocie.titre }}</td>
                    <td>{{ commentaire.contenu }}</td>
                    <td>{{ commentaire.note }}</td>
                    <td>
                        <a href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}">Modifier</a><br>
                        <a href="{{ path('commentaire_suppression', { 'id': commentaire.id }) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
